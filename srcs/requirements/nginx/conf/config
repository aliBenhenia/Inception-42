server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name www.sahafid.1337.ma sahafid.1337.ma;

    ssl_certificate /etc/ssl/certs/nginx-selfsigned.crt;  # Path to your SSL certificate
    ssl_certificate_key /etc/ssl/private/nginx-selfsigned.key;  # Path to your SSL certificate key

    ssl_protocols TLSv1.3;  # Enable only TLSv1.3 for better security
    ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-CHACHA20-POLY1305';  # Recommended ciphers

    index index.php;
    root /var/www/html;

    location / {
        try_files $uri $uri/ =404;  # Serve static files and directories, return 404 if not found
    }

    location ~ \.php$ {
        try_files $uri =404;  # Ensure that the file exists before passing to PHP-FPM
        fastcgi_pass wordpress:9000;  # Pass the request to PHP-FPM running in a container named 'wordpress'
        include fastcgi_params;  # Include standard FastCGI parameters
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;  # Set the SCRIPT_FILENAME parameter for PHP-FPM
    }

    location ~ /\.ht {
        deny all;  # Deny access to .htaccess files
    }
}
